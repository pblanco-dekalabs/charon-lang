{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "alwaysStrict": true,
    "strict": true,
    "allowUnreachableCode": false,
    "downlevelIteration": true,
    "target": "ES6",
    "lib": [
      "ES6",
      "DOM"
    ],
    "outDir": "build",
    "module": "CommonJS",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ]
}